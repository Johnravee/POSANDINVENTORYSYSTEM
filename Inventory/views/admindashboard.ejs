<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard | MilkTea</title>
    <link rel="shortcut icon" href="/Milkteas.png" type="image/x-icon">
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
    <script defer src="/bootstrap/dist/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/Requests/logoutreq.js"></script>
</head>


<body>


    <!-- Navigation -->
    <section class="cons d-flex flex-row">
        <aside class="col-auto vh-100 w-25 d-flex bg-dark align-items-center flex-column border-end shadow-sm sticky-top">
            <div class="m-5 text-center d-flex justify-content-start align-items-center w-100 flex-wrap">
                <img class="ms-5" src="/Milkteas.png" alt="MilkTea logo" style="height: 100; width: 50px;">
                <span class="fs-5 ms-4 fw-bolder text-white">Milktea</span>
            </div>
        
            <div class="list-group  w-100 d-flex justify-content-evenly rounded-0 link-offset-1-hover">
                <a href="/dashboard" class="list-group-item list-group-item-action p-3 bg-dark text-white  " style="border-left: 8px solid blue;
                    border-right: none; border-bottom: none ; border-top: none;"><i class="bi bi-speedometer2 m-2"></i><span
                        class="m-1 fs-6 fw-bold">Dashboard</span></a>
                <a href="/profile" class="list-group-item list-group-item-action p-3 border-0 bg-dark text-white  "><i
                        class="bi bi-person-fill m-2"></i><span class="m-1 fs-6 fw-bold">Profile</span></a>
                <a href="/createaccount" class="list-group-item list-group-item-action p-3 border-0  bg-dark text-white "><i
                        class="bi bi-person-plus-fill m-2"></i><span class="m-1 fs-6 fw-bold">New admin</span></a>
                <a href="/employees" class="list-group-item list-group-item-action p-3 border-0  bg-dark text-white "><i
                        class="bi bi-people-fill m-2"></i><span class="m-1 fs-6 fw-bold">Employee's</span></a>
                <a href="/administrators" class="list-group-item list-group-item-action p-3 border-0  bg-dark text-white "><i
                        class="bi bi-people-fill m-2"></i><span class="m-1 fs-6 fw-bold">Administrator's</span></a>
                <a href="/products" class="list-group-item list-group-item-action p-3 border-0  bg-dark text-white "><i class="bi bi-receipt m-2"></i><span
                        class="m-1 fs-6 fw-bold">Products</span></a>
                
            </div>
        </aside>

        <section class="w-100 overflow-y-auto">
            <nav class="navbar navbar-expand-lg bg-body-tertiary sticky-top bg-white shadow-sm">
                <div class="container-fluid">
                    <a class="navbar-brand fw-bold" href="#">Dashboard</a>
                    <div>
                        <button class="btn btn-danger btn-sm fw-bold logoutbtn" type="button"><i class="bi bi-box-arrow-right"></i><span class="navbar-text text-white ms-1">Logout</span></button>
                    </div>
                </div>
            </nav>

            <!-- Content-body -->
            <section class="container-fluid mb-4 w-100 h-auto">
                <div class="row d-flex justify-content-evenly">
                    <div class="col-lg-3 row bg-white border-1 m-3 mt-4 p-4 shadow-sm text-uppercase fw-bold">
                        <div class="col-lg-12 fs-5">Employee's</div>
                        <div class="col-lg-3 ms-2 fs-1  text-success"><i class="bi bi-people-fill"></i></div>
                        <div class="col-lg-8 d-flex align-items-center justify-content-end text-success text-end fs-2"><%= totalEmployee.totalAccounts %></div>
                    </div>

                    <div class="col-lg-3 row bg-white border-1 m-3 mt-4 p-4 shadow-sm text-uppercase fw-bold">
                        <div class="col-lg-12 fs-5">Active P.O.S</div>
                        <div class="col-lg-3 ms-2 fs-1  text-success"><i class="bi bi-pc-display-horizontal"></i></div>
                        <div class="col-lg-8 d-flex align-items-center justify-content-end text-success text-end fs-2">5</div>
                    </div>

                    <div class="col-lg-3 row bg-white  border-1  m-3 mt-4 p-4 shadow-sm text-uppercase fw-bold">
                        <div class="col-lg-12 fs-5">Total Sales</div>
                        <div class="col-lg-3 ms-2 fs-1  text-success"><i class="bi bi-bar-chart-fill"></i></div>
                        <div class="col-lg-8 d-flex align-items-center justify-content-end text-success text-end fs-2">51.5k</div>
                    </div>
                </div>
            </section>

            <!-- Chart box -->
           <section class="row w-100 p-5 h-auto d-flex justify-content-center">
                <div class="col-lg-6 border shadow-sm p-5 m-1 ">
                    <div class="w-100  mb-3">
                        <div class="input-group d-flex justify-content-evenly align-items-center w-100">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="chart" id="barGraph">
                                <label class="form-check-label" for="barGraph">
                                    Bar graph
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="chart" id="lineChart">
                                <label class="form-check-label" for="lineChart">
                                    Line chart
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="chart" id="pieChart">
                                <label class="form-check-label" for="pieChart">
                                    Pie chart
                                </label>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Graphs -->
                    <div class="container d-flex justify-content-center align-items-center h-100 ">
                        <div class="h-100 w-100">
                            <div>
                                <canvas id="myChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Best Products -->
                <div class="container border p-5  shadow-sm col-lg-5 m-1 d-flex justify-content-center align-items-center flex-column">
                    <p class="text-muted">Best product's</p>
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Product Name</th>
                                <th scope="col">Product Sales</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-uppercase">Wintermelon</td>
                                <td class="text-uppercase">10k</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
           </section>
        </section>
    </section>

    
</body>
<script>
    document.addEventListener("DOMContentLoaded", ()=>{
        const ctx = document.getElementById('myChart');
        const barGraph = document.querySelector("#barGraph");
        const lineGraph = document.querySelector("#lineChart");
        const Pie = document.querySelector("#pieChart");

        let currentChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'],
                datasets: [{
                    label: '# of Sales',
                    data: [12, 19, 3, 5, 2, 3],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    title: {
                        display: true,
                        text: 'Monthly Sales'
                    }
                }
            }
        });

        function updateChartContent(chartType) {
            currentChart.destroy();

            currentChart = new Chart(ctx, {
                type: chartType,
                data: {
                    labels:  ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'],
                    datasets: [{
                        label: '# of Sales',
                        data: [12, 19, 3, 5, 2, 3, 5, 6, 7, 8, 7, 9],
                        borderWidth: 1
                    }]
                },
                options: {
                    aspectRatio: 2,
                

                    scales: {
                        y: {
                            beginAtZero: true,
                           
                        }

                    },
                    plugins: {
                        title: {
                            display: true,
                            text: 'Monthly Sales',
                        },
                        
                    }

                }
            });
        }

        barGraph.checked = true;
        updateChartContent('bar');


        barGraph.addEventListener('change', () => {
            barGraph.checked && (updateChartContent('bar'))
        });

        lineGraph.addEventListener('change', () => {
            lineGraph.checked && (updateChartContent('line'))
        });

        pieChart.addEventListener('change', () => {
            pieChart.checked && (updateChartContent('doughnut'))
        });
    });
    
</script>

</html>